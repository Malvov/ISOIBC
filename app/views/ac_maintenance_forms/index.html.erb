<div class="row">
  <div class="text-center"><h1>Registro de mantenimiento de equipos de AC</h1></div>
</div>

<div class="row">
  <%= form_tag ac_maintenance_forms_path, method: :get do %>
      <div class="col-md-4">
        <%= text_field_tag :query, params[:query], class: 'form-control' %>
      </div>
      <div class="col-md-4">
        <%= submit_tag 'Buscar', name: nil, class: 'btn btn-info' %>
      </div>
      <div class="col-md-4">
        <%= link_to 'Nueva', new_ac_maintenance_form_path, class: 'btn btn-success' %>
      </div>
  <% end %>
</div>

<%= will_paginate @ac_maintenance_forms, renderer: BootstrapPagination::Rails %>
<table class="table">
  <thead>
    <tr>
      <th>Número de orden</th>
      <th>Número de serie</th>
      <th>Cliente</th>
      <th>Operario</th>
      <th>Conjunto</th>
      <th>Tipo de mantenimiento</th>
      <th>Tipo de trabajo</th>
      <th>Fecha</th>
      <th>Observaciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ac_maintenance_forms.each do |ac_maintenance_form| %>
      <tr>
        <td><%= ac_maintenance_form.id %></td>
        <td><%= ac_maintenance_form.serial_number %></td>
        <td><%= ac_maintenance_form.customer.name %></td>
        <td><%= ac_maintenance_form.operario %></td>
        <td><%= ac_maintenance_form.part %></td>
        <td><%= ac_maintenance_form.maintenance_type %></td>
        <td><%= ac_maintenance_form.task_type %></td>
        <td><%= ac_maintenance_form.date.strftime("%d/%m/%Y") %></td>
        <td><%= ac_maintenance_form.comment %></td>
        <td><%= link_to ac_maintenance_form, 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Ver' do  %>
                <%= fa_icon 'eye 2x' %>
            <% end %>
        </td>
        <td><%= link_to edit_ac_maintenance_form_path(ac_maintenance_form), 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Editar' do %>
                <%= fa_icon 'edit 2x' %>
            <% end %>
        </td>
        <td><%= link_to ac_maintenance_form_path(ac_maintenance_form), method: :delete, 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Eliminar',
                data: { confirm: 'U sure?' } do %>
                <%= fa_icon 'trash 2x'%>
            <% end %>    
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
