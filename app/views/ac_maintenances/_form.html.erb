
<%= simple_form_for(@ac_maintenance) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :customer, label: 'Cliente', prompt: 'Escoger cliente' %>
    <%# f.input :parts, label: 'Conjunto', collection: @conjunto, include_blank: false, input_html: { multiple: true} %>
    <%= label_tag 'Conjunto' %>    
    <%= select_tag 'ac_maintenance[parts]', options_for_select(@parts, @ac_maintenance.parts),  { multiple: true, class: 'form-control form-group' } %>
    <%= f.input :maintenance_type, label: 'Tipo de mantenimiento', collection: @maintenance_types,  prompt: 'Escoger tipo de mantenimiento' %>
    <%= f.input :task_type,  label: 'Tipo de trabajo', collection: @task_types, prompt: 'Escoger tipo de trabajo' %>
    <%= f.input :comment, label: 'Comentario' %>
    <%= f.label :date, label: 'Fecha del mantenimiento' %>
    <div class="input-group form-group">
      <%= f.text_field :date, class: 'form-control datetimepicker', value: @ac_maintenance.persisted? ? f.object.date.strftime('%d/%m/%Y') : DateTime.now.strftime('%d/%m/%Y')  %>
       <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
    </div>
    <div class="input-group">
      <span class="input-group-addon">VÃ¡lido para</span>
      <%= f.input :valid_for, label: false %>
      <span class="input-group-addon">unidad(es)</span>
    </div>
  </div>
<br>
  <div class="form-actions">
    <%= f.button :submit, 'Guardar', class: 'btn btn-success' %>
  </div>
<% end %>
