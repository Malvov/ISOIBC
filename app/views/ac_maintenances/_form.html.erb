
<%= simple_form_for(@ac_maintenance) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :serial_number %>
    <%= f.association :customer %>
    <%# f.input :parts, as: :grouped_select, collection: AcMaintenance::CONJUNTO, group_method: :last, include_blank: false, input_html: { multiple: true} %>
    <%= label_tag 'Conjunto' %>    
    <%= select_tag 'ac_maintenance[parts]', grouped_options_for_select(AcMaintenance::CONJUNTO),  { multiple: true, class: 'form-control form-group' } %>
    <%= f.input :user_id %>
    <%= f.input :maintenance_type %>
    <%= f.input :task_type %>
    <%= f.input :comment %>
    <%= f.input :date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
