<h1>√Åreas</h1>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td><%= link_to area, 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Ver' do %>
                <%= fa_icon 'eye 2x' %>
            <% end %>
        </td>
        <td><%= link_to edit_area_path(area), 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Editar' do %>
                <%= fa_icon 'edit 2x' %>
            <% end %>
        </td>
        <td><%= link_to area,  'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Eliminar', method: :delete, data: { confirm: 'Are you sure?' } do %>
                <%= fa_icon 'trash 2x'%>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Nueva', new_area_path, class: 'btn btn-success' %>
