<p id="notice"><%= notice %></p>

<h1>Completions for <%= link_to @indicator.name, @indicator %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @completions.each do |completion| %>
      <tr>
        <td><%= completion.date %></td>
        <td><%= link_to 'Show', [@indicator, completion], class: 'btn btn-info' %></td>
        <td><%# link_to 'Edit', edit_completion_path(completion) %></td>
        <td><%= link_to 'Destroy', [@indicator, completion], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Completion', new_indicator_completion_path, class: 'btn btn-lg btn-primary' %>
