<h1>Operario/as</h1>

<%= employees_evaluations %>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= link_to employee, 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Ver' do %>
                <%= fa_icon 'eye 2x' %>
            <% end %>
        </td>
        <td><%= link_to edit_employee_path(employee), 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Editar' do %>
                <%= fa_icon 'edit 2x' %>
            <% end %>
        </td>
        <td><%= link_to employee,  'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Eliminar', method: :delete, data: { confirm: 'Are you sure?' } do %>
                <%= fa_icon 'trash 2x'%>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

