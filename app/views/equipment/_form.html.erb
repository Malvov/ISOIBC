
<%= simple_form_for(@equipment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Nombre' %>
    <%= f.input :location, label: 'Locación', collection: %w[IAT IT2 IT3], include_blank: 'Torre' %>
    <%= f.input :description, label: 'Descripción' %>
    <%= f.input :provider_ids, label: 'Proveedores', collection: Provider.all, include_blank: false, input_html: { multiple: true} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Guardar', class: 'btn btn-success' %>
  </div>
<% end %>
