<h1>Equipos industriales</h1>
<br>
<%= link_to 'Nuevo', new_equipment_path, class: 'btn btn-primary' %>
<br>
<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Locación</th>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.name %></td>
        <td><%= equipment.location %></td>
        <td><%= equipment.description %></td>
        
        <td><%= link_to equipment, 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Ver' do  %>
                <%= fa_icon 'eye 2x' %>
            <% end %>
        </td>
        <td><%= link_to edit_equipment_path(equipment), 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Editar' do %>
                <%= fa_icon 'edit 2x' %>
            <% end %>
        </td>
        <td><%= link_to equipment_path(equipment), method: :delete, 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Eliminar',
                data: { confirm: 'U sure?' } do %>
                <%= fa_icon 'trash 2x'%>
            <% end %>    
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

