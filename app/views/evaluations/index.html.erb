<h1>Evaluations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Operaria/o</th>
      <th>Actividad</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= evaluation.employee.name %></td>
        <td><%= evaluation.task.name %></td>
        <td><%= evaluation.result %></td>
        <td><%= link_to 'Show', evaluation %></td>
        <td><%= link_to 'Edit', edit_evaluation_path(evaluation) %></td>
        <td><%= link_to 'Destroy', evaluation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva', new_evaluation_path, class: 'btn btn-success' %>
