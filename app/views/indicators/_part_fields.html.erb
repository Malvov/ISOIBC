<div class="row">
    <div class="nested-fields">
        <div class="col-lg-3">
            <%= f.input :name, label: false %>
        </div>
        <div class="col-lg-3">
             <%= f.input :answer_type_id, label: false, collection: AnswerType.all,
                  value_method: :id,
                  label_method: :name,
                  prompt: 'Seleccionar el tipo de respuesta' %>
        </div>
        <div class="col-lg-3">
            <%= link_to_remove_association 'Borrar', f, class: 'btn btn-danger' %>
        </div>
    </div>
</div>