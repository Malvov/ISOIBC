<p id="notice"><%= notice %></p>

<h1>Indicators</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @indicators.each do |indicator| %>
      <tr>
        <td><%= indicator.name %></td>
        <td><%= link_to 'Show', indicator_completions_path(indicator), class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_indicator_path(indicator), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', indicator, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Indicator', new_indicator_path, class: 'btn btn-primary' %>
