<div class="row">
  <div class="text-center">
    <h1>Tipos de medidas</h1>
  </div>
</div>
<div class="row">
  <%= form_tag measurement_types_path, method: :get do %>
      <div class="col-md-4">
        <%= text_field_tag :query, params[:query], class: 'form-control' %>
      </div>
      <div class="col-md-4">
        <%= submit_tag 'Buscar', name: nil, class: 'btn btn-info' %>
      </div>
      <div class="col-md-4">
        <%= link_to 'Nuevo', new_measurement_type_path, class: 'btn btn-success' %>
      </div>
  <% end %>
</div>
<%= will_paginate @measurement_types, renderer: BootstrapPagination::Rails %>
<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Equipo</th>
      <th>Par√°metro</th>
      <th>Unidad de medida</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurement_types.each do |measurement_type| %>
      <tr>
        <td><%= measurement_type.name %></td>
        <td><%= measurement_type.equipment.name %></td>
        <td><%= measurement_type.parameter.name %></td>
        <td><%= measurement_type.unit %></td>
        <td><%= link_to measurement_type, 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Ver' do  %>
                <%= fa_icon 'eye 2x' %>
            <% end %>
        </td>
        <td><%= link_to edit_measurement_type_path(measurement_type), 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Editar' do %>
                <%= fa_icon 'edit 2x' %>
            <% end %>
        </td>
        <td><%= link_to measurement_type_path(measurement_type), method: :delete, 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Eliminar',
                data: { confirm: 'U sure?' } do %>
                <%= fa_icon 'trash 2x'%>
            <% end %>    
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

