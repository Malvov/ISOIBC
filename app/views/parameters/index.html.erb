<div class="row">
  <div class="text-center">
    <h1>Parámetros</h1>
  </div>
</div>
  
<div class="row">
  <%= form_tag parameters_path, method: :get do %>
      <div class="col-md-4">
        <%= text_field_tag :query, params[:query], class: 'form-control' %>
      </div>
      <div class="col-md-4">
        <%= submit_tag 'Buscar', name: nil, class: 'btn btn-info' %>
      </div>
      <div class="col-md-4">
        <%= link_to 'Nuevo', new_parameter_path, class: 'btn btn-success' %>
      </div>
  <% end %>
</div>

<%= will_paginate @parameters, renderer: BootstrapPagination::Rails %>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Igual</th>
      <th>Valor mínimo</th>
      <th>Valor máximo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parameters.each do |parameter| %>
      <tr>
        <td><%= parameter.name %></td>
        <td><%= parameter.equal %></td>
        <td><%= parameter.min_value %></td>
        <td><%= parameter.max_value %></td>
        <td><%= link_to parameter, 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Ver' do  %>
                <%= fa_icon 'eye 2x' %>
            <% end %>
        </td>
        <td><%= link_to edit_parameter_path(parameter), 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Editar' do %>
                <%= fa_icon 'edit 2x' %>
            <% end %>
        </td>
        <td><%= link_to parameter_path(parameter), method: :delete, 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Eliminar',
                data: { confirm: 'U sure?' } do %>
                <%= fa_icon 'trash 2x'%>
            <% end %>    
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
