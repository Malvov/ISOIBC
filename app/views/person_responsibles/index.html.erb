<h1>Responsables</h1>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person_responsibles.each do |person_responsible| %>
      <tr>
        <td><%= person_responsible.name %></td>
        <td><%= link_to person_responsible, 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Ver' do %>
                <%= fa_icon 'eye 2x' %>
            <% end %>
        </td>
        <td><%= link_to edit_person_responsible_path(person_responsible), 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Editar' do %>
                <%= fa_icon 'edit 2x' %>
            <% end %>
        </td>
        <td><%= link_to person_responsible,  'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Eliminar', method: :delete, data: { confirm: 'Are you sure?' } do %>
                <%= fa_icon 'trash 2x'%>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Nuevo/a', new_person_responsible_path, class: 'btn btn-success' %>
