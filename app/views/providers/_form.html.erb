
<%= simple_form_for(@provider) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Nombre' %>
    <%= f.input :equipment_ids, label: 'Equipos', collection: Equipment.all, include_blank: false, input_html: { multiple: true} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
