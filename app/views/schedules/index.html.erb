<div class="row">
  <div class="text-center"><h1>Programaciones</h1></div>
</div>

<div class="row">
  <%= form_tag schedules_path, method: :get do %>
      <div class="col-md-4">
        <%= text_field_tag :query, params[:query], class: 'form-control' %>
      </div>
      <div class="col-md-4">
        <%= submit_tag 'Buscar', name: nil, class: 'btn btn-info' %>
      </div>
      <div class="col-md-4">
        <%= link_to 'Nueva', new_schedule_path, class: 'btn btn-success' %>
      </div>
  <% end %>
</div>
<%= will_paginate @schedules, renderer: BootstrapPagination::Rails %>
<table class='table'>
  <thead>
    <tr>
      
      <th>Cliente</th>
      
      <th>Mes</th>
      <th>Mantenimientos programados</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        
        <td><%= schedule.customer.name %></td>
      
        <td><%= schedule.month %></td>
        <td><%= schedule.maintenances_quantity %></td>
        <td><%= link_to schedule, 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Ver' do  %>
                <%= fa_icon 'eye 2x' %>
            <% end %>
        </td>
        <td><%= link_to edit_schedule_path(schedule), 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Editar' do %>
                <%= fa_icon 'edit 2x' %>
            <% end %>
        </td>
        <td><%= link_to schedule_path(schedule), method: :delete, 'data-toggle': 'tooltip', 'data-placement': 'top', 'title': 'Eliminar',
                data: { confirm: 'U sure?' } do %>
                <%= fa_icon 'trash 2x'%>
            <% end %>    
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

