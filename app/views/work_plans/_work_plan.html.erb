<div id="work-plan-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <div class="row">
                <div class="col-lg-6">
                    <div>
                        <%= image_tag @work_plan.image, class: 'image-card' %>
                    </div>
                </div>
                <div class="col-lg-6">
                    <h3><%= @work_plan.task %></h3>
                </div>
            </div>
        </div>
        <div class="modal-body">
            <p>
                <strong>Estado:</strong>
                <%= @work_plan.status %>
            </p>

            <p>
                <strong>Asignado a:</strong>
                <%= @work_plan.assigned_to %>
            </p>

            <p>
                <strong>Fecha de inicio:</strong>
                <%= @work_plan.start_date.strftime '%d/%m/%Y' %>
            </p>

            <p>
                <strong>Fecha de fin:</strong>
                <%= @work_plan.end_date.strftime '%d/%m/%Y' %>
            </p>

            <p>
                <strong>Cantidad de m2:</strong>
                <%= @work_plan.square_meters %>
            </p>

            <p>
                <strong>Costo estimado por m2:</strong>
                <%= @work_plan.cost_estimate_per_square_meter %>
            </p>

            <p>
                <strong>Costo global:</strong>
                <%= number_to_currency @work_plan.global_cost, unit: '$'  %>
            </p>
            <p>
                <strong>Costo real:</strong>
                <%= @work_plan.real_cost %>
            </p>

            <p>
                <strong>Comment:</strong>
                <%= @work_plan.comment %>
            </p>


        </div>
        <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cerrar</button>
    </div>
    </div>
  </div>
</div>
