<div class="row">
    <div class="col-lg-6">
        <div>
            <%= image_tag @work_plan.image, class: 'image-card' if @work_plan.image.attached? %>
        </div>
    </div>
    <div class="col-lg-6">
        <h3><%= @work_plan.task %></h3>
    </div>
</div>

<p>
    <strong>Estado:</strong>
    <%= @work_plan.status %>
</p>

<p>
    <strong>Asignado a:</strong>
    <%= @work_plan.assigned_to %>
</p>

<p>
    <strong>Fecha de inicio:</strong>
    <%= @work_plan.start_date.strftime '%d/%m/%Y' %>
</p>

<p>
    <strong>Fecha de fin:</strong>
    <%= @work_plan.end_date.strftime '%d/%m/%Y' %>
</p>

<p>
    <strong>Cantidad de m2:</strong>
    <%= @work_plan.square_meters %>
</p>

<p>
    <strong>Costo estimado por m2: </strong>
    <%= number_to_currency @work_plan.cost_estimate_per_square_meter, unit: 'US$ ' %>
</p>

<p>
    <strong>Costo global: </strong>
    <%= number_to_currency @work_plan.global_cost, unit: 'US$ '  %>
</p>
<p>
    <strong>Costo real:</strong>
    <%= @work_plan.real_cost %>
</p>

<p>
    <strong>Comment:</strong>
    <%= @work_plan.comment %>
</p>

<%= link_to 'Edit', edit_work_plan_path(@work_plan) %> |
<%= link_to 'Back', work_plans_path %>