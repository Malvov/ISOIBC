<h1>Sectores</h1>
<%= link_to 'Nueva', new_zone_path, class: 'btn btn-success' %>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zones.each do |zone| %>
      <tr>
        <td><%= zone.name %></td>
        <td><%= link_to 'Mostrar', zone %></td>
        <td><%= link_to 'Editar', edit_zone_path(zone) %></td>
        <td><%= link_to 'Eliminar', zone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


